.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.preview-image {
  width: 100%;
  height: 360rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.preview-image image {
  width: 100%;
  height: 100%;
}

.form-group {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
  display: flex;
  word-break: keep-all;
  
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 140rpx;
  flex-shrink: 0;
}

.input-group {
  flex: 1;
  display: flex;
  flex-direction1: column;
}

.hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

input, .picker {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

textarea {
  width: 100%;
  height: 120rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.picker {
  display: flex;
  align-items: center;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

.cancel-btn, .save-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.save-btn {
  background-color: #4CAF50;
  color: #fff;
}

.remarks-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  gap: 10rpx;
}

.remarks-container textarea {
  flex: 3;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  padding: 15rpx;
}

.record-btn {
  flex: 1;
  height: auto;
  background-color: #2196F3;
  color: #fff;
  border-radius: 8rpx; /* 方形按钮 */
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 15rpx;
  white-space: nowrap;
}

.audio-player {
  margin-top: 20rpx;
  width: 100%;
}

.recording-tip {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  z-index: 999;
}

.sound-wave {
  width: 300px;
  height: 150px;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bar {
  width: 5px;
  background: linear-gradient(to top, #4a90e2, #f8f8f8);
  border-radius: 5px;
  animation: sound-wave-animation 1.5s infinite ease-in-out;
}

@keyframes sound-wave-animation {
  0%, 100% {
      height: 10px;
  }
  50% {
      height: 40px;
  }
}

/* 为每个条形设置不同的动画延迟 */
.bar:nth-child(1) { animation-delay: 0.1s; }
.bar:nth-child(2) { animation-delay: 0.2s; }
.bar:nth-child(3) { animation-delay: 0.3s; }
.bar:nth-child(4) { animation-delay: 0.4s; }
.bar:nth-child(5) { animation-delay: 0.5s; }
.bar:nth-child(6) { animation-delay: 0.6s; }
.bar:nth-child(7) { animation-delay: 0.7s; }
.bar:nth-child(8) { animation-delay: 0.8s; }
.bar:nth-child(9) { animation-delay: 0.9s; }
.bar:nth-child(10) { animation-delay: 1.0s; }

.recording-indicator {
  position: absolute;
  top: -30px;
  left: 50%;
  transform: translateX(-50%);
  color: #ff4d4d;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.recording-dot {
  width: 10px;
  height: 10px;
  background-color: #ff4d4d;
  border-radius: 50%;
  margin-right: 8px;
  animation: pulse 0.1s infinite;
}

@keyframes pulse {
  0% {
      opacity: 1;
  }
  50% {
      opacity: 0.3;
  }
  100% {
      opacity: 1;
  }
}