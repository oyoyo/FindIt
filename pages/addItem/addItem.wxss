.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.preview-image {
  width: 100%;
  height: 360rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.preview-image image {
  width: 100%;
  height: 100%;
}

.form-group {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
  display: flex;
  word-break: keep-all;
  
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  width: 120rpx;
}

.hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

input, .picker {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

textarea {
  width: 100%;
  height: 120rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.picker {
  display: flex;
  align-items: center;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

.cancel-btn, .save-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.save-btn {
  background-color: #4CAF50;
  color: #fff;
}

.remarks-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  gap: 10rpx;
}

.remarks-container textarea {
  flex: 3;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  padding: 15rpx;
}

.record-btn {
  flex: 1;
  height: auto;
  background-color: #2196F3;
  color: #fff;
  border-radius: 8rpx; /* 方形按钮 */
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 15rpx;
  white-space: nowrap;
}

.audio-player {
  margin-top: 20rpx;
  width: 100%;
}

.recording-tip {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  z-index: 999;
}