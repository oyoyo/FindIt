<view class="container">
  <view class="title-container">
    <text class="title">最新记录</text>
    <view class="settings-btn" bindtap="goToSettings">
      <image class="settings-icon" src="data:image/svg+xml;base64,"></image>
    </view>
  </view>
  
  <!-- 物品列表 -->
  <scroll-view scroll-y="true" class="items-list">
    <view class="list-header">
      <text class="header-image">图片</text>
      <text class="header-name">名称</text>
      <text class="header-location">位置</text>
      <image class="btn-icon-small" src="data:image/svg+xml;base64,"></image>
      <text class="header-time">日期</text>
    </view>
    
    <view class="list-items">
      <view class="list-item" wx:for="{{items}}" wx:key="id">
        <view class="item-image-container" bindtap="previewImage" data-url="{{item.imageUrl}}">
          <image class="item-image" src="{{item.imageUrl}}" mode="aspectFill"></image>
        </view>
        <view class="item-content" bindtap="showItemDetail" data-id="{{item.id}}">
          <text class="item-name">{{item.name}}</text>
          <text class="item-location">{{item.location}}</text>
          <text class="item-reminderDays">{{item.reminderDays}}</text>
          <text class="item-time">{{item.formattedDate}}</text>

        </view>
      </view>
    </view>
  </scroll-view>

  <!-- 底部按钮 -->
  <view class="button-group">
    <button class="btn camera-btn" bindtap="takePhoto">
      <image class="btn-icon" src="data:image/svg+xml;base64,"></image>
    </button>
    <button class="btn search-btn" bindtap="goToSearch">
      <image class="btn-icon" src="data:image/svg+xml;base64,"></image>
    </button>
  </view>
</view> 