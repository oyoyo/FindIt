.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  position: relative;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  padding: 15rpx;
  color: #333;
  text-align: center;
    width: 100%;
}

/* 列表样式 */
.items-list {
  flex: 1;
  width: 100%;
  overflow-y: auto;
  padding-bottom: 180rpx; /* 为底部按钮留出空间 */
}

.list-header {
  display: grid;
  grid-template-columns: 120rpx 10fr 10fr 5fr 200rpx;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 1;
}

.header-image, .header-location, .header-name, .header-time {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  text-align: left;
  padding: 0 0 0 20rpx;
}

.list-items {
  background-color: #fff;
}

.list-item {
  display: grid;
  grid-template-columns: 120rpx 10fr 10fr 5fr 200rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  align-items: center;
}

/* 添加到期提醒背景色 */
.list-item.days-1 {
  background-color: rgba(255, 0, 0, 0.1); /* 红色背景 - 剩余1天 */
}

.list-item.days-2-3 {
  background-color: rgba(255, 255, 0, 0.1); /* 黄色背景 - 剩余2-3天 */
}

.list-item.days-4-5 {
  background-color: rgba(0, 0, 255, 0.1); /* 蓝色背景 - 剩余4-5天 */
}

.item-image-container {
  width: 120rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin: 0 auto;
}

.item-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.item-content {
  display: contents;
}

.item-location, .item-name, .item-time, .item-reminderDays {
  font-size: 28rpx;
  color: #333;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 10rpx;
}

/* 底部按钮样式 */
.button-group {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 60rpx;
  display: flex;
  justify-content: center;
  gap: 60rpx;
  background: linear-gradient(transparent, #f5f5f5 20%);
  z-index: 10;
}

.btn {
  width: 120rpx;
  height: 120rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 60rpx;
  background-color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.btn:active {
  transform: scale(0.95);
}

.camera-btn {
  background-color: #4CAF50;
}

.search-btn {
  background-color: #2196F3;
}

.btn-icon {
  width: 96rpx;
  height: 96rpx;
}
.btn-icon-small {
  width: 36rpx;
  height: 36rpx;
}

.btn text {
  color: #ffffff;
  font-size: 32rpx;
}

.title-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 2;
}

.settings-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.settings-icon {
  width: 48rpx;
  height: 48rpx;
} 