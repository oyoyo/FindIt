.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.image-section {
  width: 100%;
  height: 600rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-section image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.info-section {
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.info-group {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.info-item {
  margin-bottom: 30rpx;
  display: flex;
  align-items: flex-start;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.remarks .value {
  white-space: pre-wrap;
  word-break: break-all;
}

.button-group {
  margin-top: 40rpx;
  padding: 0 30rpx;
  display: flex;
  gap: 20rpx;
}

.edit-btn, .delete-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-btn {
  background-color: #2196F3;
  color: #fff;
}

.delete-btn {
  background-color: #ff4444;
  color: #fff;
} 