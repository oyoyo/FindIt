.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.search-filters {
  background-color: #fff;
  padding: 30rpx;
}

.filter-group {
  margin-bottom: 30rpx;
}

.search-input {
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.filter-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 20rpx;
}

.filter-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: block;
}

.filter-value {
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  width: 100%;
  height: 88rpx;
  background-color: #2196F3;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 列表样式 */
.items-list {
  flex: 1;
  width: 100%;
}

.list-header {
  display: grid;
  grid-template-columns: 120rpx 1fr 1fr 200rpx;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 1;
}

.header-image, .header-location, .header-name, .header-time {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  text-align: left;
  padding: 0 0 0 20rpx;
}

.list-items {
  background-color: #fff;
}

.list-item {
  display: grid;
  grid-template-columns: 120rpx 1fr 1fr 200rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  align-items: center;
  
}

.item-image-container {
  width: 120rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin: 0 auto;
}

.item-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.item-content {
  display: contents;
}

.item-location, .item-name, .item-time {
  font-size: 28rpx;
  color: #333;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 10rpx;
} 