.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.add-category {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.category-input {
  flex: 1;
  height: 80rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.add-btn {
  width: 160rpx;
  height: 80rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}

.categories-list {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.category-item:last-child {
  border-bottom: none;
}

.category-name {
  font-size: 28rpx;
  color: #333;
}

.delete-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ff4d4f;
  border-radius: 30rpx;
}

.delete-icon {
  color: #fff;
  font-size: 40rpx;
  line-height: 1;
} 